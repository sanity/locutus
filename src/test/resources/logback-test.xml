<configuration debug="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss} %-5level  %cyan(%X) \(%F:%L\) - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="locutus.protocols.ring" level="info" >
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="locutus.net.messages" level="info">
        <appender-ref ref="STDOUT" />
    </logger>

    <root level="warn">
        <appender-ref ref="STDOUT" />
    </root>


</configuration>